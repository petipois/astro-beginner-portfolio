---
import Layout from "@/layouts/Layout.astro";
import Button from "./starwind/button";
const formLink = "/";
---
    <div class="bg-[#24361C] py-32">
        <div class="w-full text-9xl lg:text-[200pt] heading orange text-center">COMPANY</div>
        <div class="flex p-4 m-4">
            <div>
                <img src="https://placehold.co/50x50" alt="Profile Picture" class="rounded-l-full rounded-t-full w-32 object-cover h-32 border border-white border-2" />
            </div>
            <div class="p-4 text-white">
                <h1 class="text-4xl font-bold">LOREM.IPSUM.DOLOR</h1>
                <h2 class="max-w-lg text-lg mb-4">
                  Lorem ipsum dolor sit amet consectetur adipisicing.
                </h2>
                <Button href={formLink} class="bg-gray-600 uppercase p-8 text-2xl">Work with me</Button>
            </div>
        </div>
    </div>